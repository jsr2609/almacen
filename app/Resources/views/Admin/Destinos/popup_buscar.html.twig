<div id="modal-buscar-destino" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Busqueda de Destino</h4>
            </div>
            <div class="modal-body">
                <table id="lista-destinos" width="100%" class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Clave</th>
                            <th>Nombre</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        {% for destino in destinos %}
                            <tr>
                                <td>
                                    <button type="button" class="btn btn-primary btn-xs seleccionar-destino"
                                        programa-id="{{destino.id}}" data-toggle="tooltip" title="Seleccionar">
                                        <span class="glyphicon glyphicon-ok-sign"></span>                                     
                                    </button>
                                </td>
                                <td>{{destino.clave}}</td>
                                <td>{{destino.nombre}}</td>
                                
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span> Cancelar
                </button>
                
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script type="text/javascript">
    $('#modal-buscar-destino').modal('show');
    dtDestinos = createDataTable('complete', 'lista-destinos');
</script>
{{include(acciones)}}