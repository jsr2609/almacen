<h2 class="text-primary">Datos del Pedido</h2>
<div>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#tab1" aria-controls="home" role="tab" data-toggle="tab">Datos del Pedido</a></li>
      <li role="presentation"><a href="#tab2" aria-controls="profile" role="tab" data-toggle="tab">Artículos</a></li>
      <li role="presentation"><a href="#tab3" aria-controls="messages" role="tab" data-toggle="tab">Comfirmar</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tab1">
            <div class="col-lg-12 margin-top-15">
            <div class="row">
                <div class="col-lg-3 cell">
                    <strong>Numero de Pedido:</strong><br/>
                    {{pedido.pedidonumero}}
                </div>
                <div class="col-lg-3 cell">
                    <strong>Fecha Pedido:</strong><br/>
                    {{pedido.pedidofecha | date('d/m/Y')}}
                </div>
                <div class="col-lg-3 cell">
                    <strong>Tipo de Compra:</strong><br/>
                    {{pedido.tipocompra}}
                </div>
                <div class="col-lg-3 cell">
                    <strong>Ejercicio:</strong><br/>
                    {{pedido.ejercicio}}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 cell">
                    <strong>Programa:</strong><br/>
                    {{pedido.programaclave}} - {{pedido.programanombre}}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 cell">
                    <strong>Proveedor:</strong><br/>
                    {{pedido.proveedorclave}} - {{pedido.proveedornombre}}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 cell">
                    <strong>Destino:</strong><br/>
                    {{pedido.destino}}
                </div>
            </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="tab2">
            <div class="table-responsive">
                <table id="detalle-pedido" width="100%" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <td>#</td>
                            <th>Clave</th>
                            <th>Nombre</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for articulo in articulos %}
                            <tr>
                                <td>{{loop.index}}</td>
                                <td>{{articulo.clave}}</td>
                                <td>{{articulo.nombre}}</td>
                                <td>{{articulo.cantidad | number_format(0, '.', ',')}}</td>
                                <td>{{articulo.precio | number_format(2, '.', ',')}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="tab3">
            <div class="jumbotron margin-top-15">
                <h1>Confirmación!</h1>
                <p>Si los datos son correctos, genera la entrada.</p>
                <p>
                    <a id="btn-generar-entrada" href="{{ path('admin_entradas_procesar_de_pedido', {'pedidonumero': pedido.pedidonumero, 'compra': pedido.compra, 'ejercicio': pedido.ejercicio}) }}" class="btn btn-warning btn-lg" data-toggle="tooltip" title="title">
                        <i class="fa fa-floppy-o fa-fw"></i> Generar Entrada
                    </a>
                </p>
            </div>            
        </div>
    </div>
</div>
<script type="text/javascript">
    dtDetallePedido = createDataTable('minimal', "detalle-pedido");
    Pace.start();
    $(".tab-content").on("click", "#btn-generar-entrada", function(e) {
        
        
    });
</script>
      