<h3 class="text-primary">Datos del Pedido</h3>
<div class="col-lg-12">
    
    <div class="row">
        <div class="col-lg-3 cell">
            <strong>Numero de Pedido:</strong><br/>
            {{pedido.pedidonumero}}
        </div>
        <div class="col-lg-3 cell">
            <strong>Fecha Pedido:</strong><br/>
            {{pedido.pedidofecha | date('d/m/Y')}}
        </div>
        <div class="col-lg-3 cell">
            <strong>Tipo de Compra:</strong><br/>
            {{pedido.tipocompra}}
        </div>
        <div class="col-lg-3 cell">
            <strong>Ejercicio:</strong><br/>
            {{pedido.ejercicio}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 cell">
            <strong>Programa:</strong><br/>
            {{pedido.programaclave}} - {{pedido.programanombre}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 cell">
            <strong>Proveedor:</strong><br/>
            {{pedido.proveedorclave}} - {{pedido.proveedornombre}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 cell">
            <strong>Destino:</strong><br/>
            {{pedido.destino}}
        </div>
    </div>
    <h5 class="text-info">Art√≠culos del Pedido</h5>
    <div class="table-responsive">
    <table id="detalle-pedido" width="100%" class="table table-striped table-hover">
        <thead>
            <tr>
                <td>#</td>
                <th>Clave</th>
                <th>Nombre</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            {% for articulo in articulos %}
                <tr>
                    <td>{{loop.index}}</td>
                    <td>{{articulo.clave}}</td>
                    <td>{{articulo.nombre}}</td>
                    <td>{{articulo.cantidad | number_format(0, '.', ',')}}</td>
                    <td>{{articulo.precio | number_format(2, '.', ',')}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
            <a href="{{ path('admin_entradas_procesar_de_pedido', {'pedidonumero': pedido.pedidonumero}) }}" class="btn btn-warning btn-lg" data-toggle="tooltip" title="title">
                <i class="fa fa-floppy-o fa-fw"></i> Generar Entrada
            </a>
                <p></p>
</div>
        
<script type="text/javascript">
    dtDetallePedido = createDataTable('minimal', "detalle-pedido");
</script>
      