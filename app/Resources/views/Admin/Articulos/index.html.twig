{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Articulos list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Clave</th>
                <th>Nombre</th>
                <th>Presentacion</th>
                <th>Cantidad</th>
                <th>Unidadmedidapresentacion</th>
                <th>Activo</th>
                <th>Fechacreacion</th>
                <th>Fechaactualizacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_articulos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.clave }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.presentacion }}</td>
                <td>{{ entity.cantidad }}</td>
                <td>{{ entity.unidadMedidaPresentacion }}</td>
                <td>{{ entity.activo }}</td>
                <td>{% if entity.fechaCreacion %}{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaActualizacion %}{{ entity.fechaActualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_articulos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_articulos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_articulos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
