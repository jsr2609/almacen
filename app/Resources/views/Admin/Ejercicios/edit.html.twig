{% extends '::/Admin/layout.html.twig' %}
{% block title_page %}
    <i class="fa fa-list fa-edit "></i>
    Alamacenes <span>> Editar</span>
{% endblock %}
{% block content -%}
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="wid-id-0" class="jarviswidget" 
                     data-widget-deletebutton="true" data-widget-colorbutton="true" data-widget-editbutton="true">
                    <header>


                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Editar</h2>

                    </header>

                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <input class="form-control" type="text">

                        </div>
                        <div class="widget-body">
                            <!-- Contenido -->
                            <div class="widget-header">                        
                                <!-- Botones de Accion -->
                                <a href="{{ path('admin_ejercicios', {}) }}" class="btn btn-primary" data-toggle="tool-tip" title="">
                                    <i class="fa fa-list fa-fw"></i> Lista de Avales
                                </a>
                            </div>
                            <!-- Contenido -->
                            
                            <form id="AvalesType" class="form-horizontal" action="{{path('admin_ejercicios_update', {'id': entity.id})}}" method="post">
                                <input type="hidden" value="PUT" name="_method">
                                {# Si se tienen que personalizar los campos, hacerlo en una plantillas #}
                                {{form_widget(edit_form)}}
                                <div class="text-right">
                                    <button type="submit" id="" class="btn btn-info">
                                        <span class="glyphicon glyphicon-floppy-disk"></span> 
                                        Actualizar
                                    </button>

                                </div>
                            </form>
                            <div class="text-right margin-top-15">
                                <form action="{{path('admin_ejercicios_delete', {'id': entity.id})}}" method="post">
                                    <input type="hidden" value="DELETE" name="_method">
                                    {{form_widget(delete_form)}}
                                    <button type="submit" id="" class="btn btn-danger">
                                        <span class="glyphicon glyphicon-trash"></span> 
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
{% endblock %}
{% block javascript_page %}
    
{% endblock %}